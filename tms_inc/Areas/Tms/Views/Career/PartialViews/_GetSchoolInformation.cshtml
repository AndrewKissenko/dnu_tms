<legend class="form-legend">
    Education Information
</legend>

<div class="form-element form-input">
        <input id="schoolStartDate" type="text" class="form-element-field" />
        <div class="form-element-bar"></div>
        <label class="form-element-label" for="schoolStartDate">Start date <span class="required">*</span></label>
</div>
<div class="form-element form-input">
    <input id="graduationDate" type="text" class="form-element-field" />
    <div class="form-element-bar"></div>
    <label class="form-element-label" for="graduationDate">Graduation Date (leave blank if no graduation)</label>
</div>


<div class="form-element form-select">
    <select id="schoolState" class="form-element-field">
        @await Html.PartialAsync("PartialViews/_GetStateList")
    </select>
    <div class="form-element-bar"></div>
    <label class="form-element-label" for="schoolState">State/Province <span class="required">*</span> (where school is located)</label>
</div>

<div class="form-element form-textarea">
    <input type="text" id="schoolName" class="form-element-field"  />
    <div class="form-element-bar"></div>
    <label class="form-element-label" for="schoolName">School name <span class="required">*</span></label>
</div>
<div class="form-element form-textarea">
    <input type="text" id="schoolCity" class="form-element-field"  />
    <div class="form-element-bar"></div>
    <label class="form-element-label" for="schoolCity">City <span class="required">*</span></label>
</div>
<div class="form-element form-textarea">
    <input id="schoolTelephone" class="form-element-field" type="tel" />
    <div class="form-element-bar"></div>
    <label class="form-element-label" for="telephone">Telephone </label>
</div>


<div class="form-element form-textarea">
    <textarea id="subjects" class="form-element-field" placeholder="accounting, mechanic, etc."></textarea>
    <div class="form-element-bar"></div>
    <label class="form-element-label" for="subjects">What did you study ? </label>
</div>



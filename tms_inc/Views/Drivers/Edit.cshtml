@model tms.Models.Driver

@{
    ViewData["Title"] = "Edit";
}

@if (User.Identity.IsAuthenticated)
{

    <h4>Driver</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Truck" class="control-label"></label>
                <div class="form-control">
                    @Html.DropDownListFor(model => model.Truck.Id, ViewBag.Trucks as SelectList)
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Trailer" class="control-label"></label>
                <div class="form-control">
                    @Html.DropDownListFor(model => model.Trailer.Id, ViewBag.Trailers as SelectList)
                </div>
            </div>

            <div class="form-group">
                <label class="control-label">Dispatcher</label> <br />
                <div class="form-control">
                    @Html.DropDownListFor(model => model.User.Id, ViewBag.Users as SelectList)
                </div>

            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
        }